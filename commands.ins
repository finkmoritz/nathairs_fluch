		~\\
		{\small \textit{#2}}\\
		~\\
		{\footnotesize {\bfseries Zeitaufwand:} #3}\\
		{\footnotesize {\bfseries Reichweite:} #4}\\
		{\footnotesize {\bfseries Komponenten:} #5}\\
		{\footnotesize {\bfseries Wirkungsdauer:} #6}\\
		~\\
		{\scriptsize #7}\\
		{\scriptsize #8}
	\end{tabularx}
}

