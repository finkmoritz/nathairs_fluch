\newcolumntype{Y}{>{\centering\arraybackslash}X} % same as 'X' but centered

\newcommandx{\dndtextbox}[2][1=\linewidth]{
	{
		\setlength{\fboxsep}{1em}
		\fbox{
			\parbox{#1}{
				#2
			}
		}
	}
}

\newcommandx{\dndspell}[8][1=-, 2=-, 3=-, 4=-, 5=-, 6=-, 7=~, 8=~]{
